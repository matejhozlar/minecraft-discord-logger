# Discord bot token (from the Developer Portal)
DISCORD_TOKEN=your-bot-token-here

# Guild (server) ID where the logs should go
DISCORD_GUILD_ID=123456789012345678

# Text channel ID inside that guild
DISCORD_CHANNEL_ID=234567890123456789

# Path to your Minecraft server folder
MC_WORKDIR=/home/mc/server

# Script to run inside MC_WORKDIR (defaults to ./run.sh if not set)
RUN_SCRIPT=run.sh

# Optional batching settings (defaults shown)
BATCH_INTERVAL_MS=3000
MAX_LINES_PER_BATCH=40
MAX_DISCORD_CHARS=1800
